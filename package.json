{
  "name": "webcat",
  "version": "1.0.0",
  "description": "一个用于抓取和分析 Cocos Creator 网页游戏资源的工具",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "keywords": [
    "cocos-creator",
    "web-scraper",
    "resource-downloader"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "puppeteer-core": "^21.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "vue": "^3.3.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.webcat.app",
    "productName": "WebCat",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
